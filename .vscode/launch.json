    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "amorphous_metals.${fileBasenameNoExtension}",
            "console": "integratedTerminal",
            "justMyCode": true,
        },
        {
            "name": "Python: Convert source files",
            "type": "debugpy",
            "request": "launch",
            "module": "amorphous_metals.convert",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "data",
                "output"
            ]
        },
    ]
}
